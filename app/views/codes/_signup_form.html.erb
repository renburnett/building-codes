<div class="row valign-wrapper v-helper">
  <form class="valign col s12 m6 offset-m3">
    <h1>Sign Up</h1>
    <div class="row">
      <div class="input-field col s12">
        <input id="user_name" type="text" name='username' required/>
        <label htmlFor="user_name">Username</label>
        <span class="helper-text">numbers and letters only</span>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="user_email" type="email" name="email" required/>
        <label htmlFor="user_email">email</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="user_password" type="password" name="password" required/>
        <label htmlFor="user_password">Password</label>
        <span class="helper-text">must be 12 characters in length, no special chars</span>
      </div>
    </div>  

    <button class="btn" type="submit" name="action">Submit</button>
  </form>
</div>